{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "singularName": "post",
    "pluralName": "posts",
    "displayName": "Post",
    "description": "Posts créés par les utilisateurs dans des subrhetics spécifiques"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "content": {
      "type": "text",
      "required": true
    },
    "slug": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "upvotes": {
      "type": "integer",
      "default": 0
    },
    "downvotes": {
      "type": "integer",
      "default": 0
    },
    "publishedDate": {
      "type": "datetime"
    },
    "comments": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::comment.comment",
      "mappedBy": "post"
    },
    "author": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "posts"
    },
    "subrhetic": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::subrhetic.subrhetic",
      "inversedBy": "posts"
    },
    "votes": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::vote.vote",
      "mappedBy": "post"
    },
    "anonymous_post_author": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::anonymous-post-author.anonymous-post-author",
      "mappedBy": "post"
    },
    "post_flair_assignments": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::post-flair-assignment.post-flair-assignment",
      "mappedBy": "post"
    },
    "saved_items": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::saved-item.saved-item",
      "mappedBy": "post"
    },
    "reports": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::report.report",
      "mappedBy": "post"
    },
    "Media": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ]
    },
    "total_votes": {
      "type": "integer",
      "default": 0
    }
  }
}
