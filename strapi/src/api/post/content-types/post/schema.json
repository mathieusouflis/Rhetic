{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "singularName": "post",
    "pluralName": "posts",
    "displayName": "Post",
    "description": "Posts créés par les utilisateurs dans des subrhetics spécifiques"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "content": {
      "type": "text",
      "required": true
    },
    "slug": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "upvotes": {
      "type": "integer",
      "default": 0
    },
    "downvotes": {
      "type": "integer",
      "default": 0
    },
    "publishedDate": {
      "type": "datetime"
    },
    "comments": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::comment.comment",
      "mappedBy": "post"
    },
    "author": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "posts"
    },
    "subrhetic": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::subrhetic.subrhetic",
      "inversedBy": "posts"
    },
    "votes": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::vote.vote",
      "mappedBy": "post"
    }
  }
}