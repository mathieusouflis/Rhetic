{
  "kind": "collectionType",
  "collectionName": "comments",
  "info": {
    "singularName": "comment",
    "pluralName": "comments",
    "displayName": "Comment",
    "description": "Commentaires sur les posts"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "author": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "comments"
    },
    "content": {
      "type": "text",
      "required": true
    },
    "upvotes": {
      "type": "integer",
      "default": 0
    },
    "downvotes": {
      "type": "integer",
      "default": 0
    },
    "publishedDate": {
      "type": "datetime"
    },
    "post": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::post.post",
      "inversedBy": "comments"
    },
    "children": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::comment.comment",
      "mappedBy": "parent"
    },
    "parent": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::comment.comment",
      "inversedBy": "children"
    },
    "votes": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::vote.vote",
      "mappedBy": "comment"
    }
  }
}